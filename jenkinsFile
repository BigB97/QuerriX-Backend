pipeline {
  agent any
  tools {nodejs "node" }
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/gustavoapolinario/node-todo-frontend'
      }
    }
    stage('Build') {
       steps {
         sh 'npm install'
       }
    }
    stage('Test') {
      steps {
        sh 'npm test'
      }
    }
    stage('Wraping File') {
      steps{
        script {
         sh "tar czf Node.tar.gz node_modules server.js package.json public app.json src tests Dockerfile docker-compose.yml uploads"
        }
      }
    }
  }
}